/* pages/pvp/pvp.wxss */
.header image{
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    z-index: -999;
}

.card{
    display: flex;
    width: 500rpx;
    height: 70rpx;
    margin-top: 10rpx;
    margin-left: 180rpx;
}

.card .left_poke{
    width: 50rpx;
    height: 63rpx;
    /* border: 1rpx solid #000; */
    position: relative;
}

.card .left_poke image{
    position: absolute;
    left: 0;
    top: 0;
    width: 50rpx;
    z-index: -888;
}

.card .left_poke .left_num{
    position: absolute;
    left: 15rpx;
    top: 18rpx;
    width: 20rpx;
    font-weight: bolder;
    font-size: 17rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.card .turn{
    width: 150rpx;
    height: 30rpx;
    background-color: white;
    border-radius: 10rpx;
    opacity: 0.7;
    box-sizing: border-box;
    margin-top: 15rpx;
    margin-left: 70rpx;
    font-size: 20rpx;
    font-family: '幼圆';
    display: flex;
    align-items: center;
    justify-content: center;
}
.card .poke_pool{
    position: relative;
    width: 50rpx;
    height: 63rpx;
    /* border: 1rpx solid #000; */
    margin-left: 100rpx;
    background-color: #fff;
    border-radius: 7rpx;
}

.card .poke_pool image{
    position: absolute;
