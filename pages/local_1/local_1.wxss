    top: 13rpx;
    width: 40rpx;
}

.card .poke_pool .pool_num{
    position: absolute;
    left: 0rpx;
    top: 0rpx;
    width: 50rpx;
    height: 63rpx;
    font-weight: bolder;
    font-size: 17rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

