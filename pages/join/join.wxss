/* pages/join/join.wxss */
.header image{
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    z-index: -999;
  }
  
  .info {
    width: 450rpx;
    height: 150rpx;
    margin: 130rpx auto;
    display: flex;
    flex-flow: row nowrap;
    justify-content: space-between;
  }
  .content {
    border: 2px #777676 solid;
    background-color: blanchedalmond;
    height: 40rpx;
    width: 320rpx;
    border-radius: 50rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
  }
  .btn {
    border: 2px #777676 solid;
    background-color: blanchedalmond;
    height: 37rpx;
    width: 55rpx;
    border-radius: 20rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    padding-left: 20rpx;
  }